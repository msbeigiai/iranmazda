<section id="custom-form">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div class="panel panel-default">
					<div class="panel-body">
						<h2>ورود</h2>

						<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						  <div class="form-group">
						    <%= f.email_field :email, autofocus: true, placeholder: "ایمیل", class: "form-control" %>
						  </div>

						  <div class="form-group">
						    <%= f.password_field :password, autocomplete: "off", placeholder: "رمز عبور", class: "form-control" %>
						  </div>

						  <% if devise_mapping.rememberable? -%>
						    <div class="form-group">
						      <%= f.check_box :remember_me %>
						      <%= f.label :remember_me %>
						    </div>
						  <% end -%>

						  <div class="form-group">
						    <%= f.submit "ورود", class: "btn btn-success" %>
						  </div>
						<% end %>

						<%#= render "devise/shared/links" %>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</section>