<section id="custom-form">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div class="panel panel-default">
					<div class="panel-body">
						<h2>ثبت نام</h2>

						<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
						  <%= devise_error_messages! %>

						  <div class="form-group">
						    <%= f.email_field :email, autofocus: true, placeholder: "ایمیل", class: "form-control" %>
						  </div>

						  <div class="form-group">
						    <% if @minimum_password_length %>
						    <em>(<%= @minimum_password_length %> characters minimum)</em>
						    <% end %><br />
						    <%= f.password_field :password, autocomplete: "off", placeholder: "رمز عبور", class: "form-control" %>
						  </div>

						  <div class="form-group">
						    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "تایید رمز عبور", class: "form-control" %>
						  </div>

						  <div class="form-group">
						    <%= f.submit "ثبت نام", class: "btn btn-success" %>
						  </div>
						<% end %>

						<%#= render "devise/shared/links" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>