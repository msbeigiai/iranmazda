
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= form_for(blog) do |f| %>
        <% if blog.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

            <ul>
            <% blog.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div dir="ltr" class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class:"form-control" %>
        </div>
		  
        <div dir="ltr" class="form-group">
          <%= f.label :title_url %>
          <%= f.text_field :title_url, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.file_field :picture, accept: 'image/jpeg, image/gif, image/png', class:"form-control" %>
        </div>

        <div dir="ltr" class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class:"form-control body-text" %>
        </div>

        <div class="form-group">
          <%= f.submit 'ثبت', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

